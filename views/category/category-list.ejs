<%- include('../header') %> <%- include('../sidebar') %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-12">
              <h1 class="text-center">
                Category Manager
              </h1>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <!-- Default box -->
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-6"></div>
              <div class="col-sm-6">
                <a href="/category-add" class="btn btn-success float-sm-right">
                  <i class="fa fa-plus" aria-hidden="true"></i>
                  Add New Category
                </a>
              </div>
            </div>

            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% data.map(function (obj) { %>
                  <tr>
                    <td>
                      <%= obj.id %>
                    </td>
                    <td>
                      <%= obj.name %>
                    </td>
                    <td>
                      <%= obj.status==0 ? 'Hide' : 'Show' %>
                    </td>
                    <td class="text-center" style="width: 15%">
                      <a href="/category-edit/<%= obj.id %>" class="btn btn-sm btn-primary">
                        <i class="fa fa-sm fa-edit"></i> Edit
                      </a>
                      <a href="/category-delete/<%= obj.id %>" class="btn btn-sm btn-danger">
                        <i class="fa fa-sm fa-trash"></i> Delete
                      </a>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>

          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('../footer') %>
